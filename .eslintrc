{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "class-methods-use-this": 0,
    "global-require": 0,
    "import/no-dynamic-require": 0,
    "no-console": 0,
    "no-param-reassign": 1,
    "no-unused-vars": [2, { "args": "none", "ignoreRestSiblings": true }],
    "no-use-before-define": ["error", { "variables": false }]
  }
}
